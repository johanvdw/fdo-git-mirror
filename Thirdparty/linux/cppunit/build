if [ ! -d ./cppunit-1.9.0 ]; then
	gunzip cppunit-1.9.0.tar.gz
	tar -xf cppunit-1.9.0.tar
fi

cd cppunit-1.9.0
./configure
make

cd ..

if [ ! -d ./lib ]; then mkdir -p ./lib; fi
cp ./cppunit-1.9.0/src/cppunit/.libs/libcppunit.a ./lib
cp ./cppunit-1.9.0/src/cppunit/.libs/libcppunit.so* ./lib
cd ./lib
ln -s libcppunit.so libcppunit-1.9.so.0
cd ..

